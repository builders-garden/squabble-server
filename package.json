    "@types/uuid": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ky": "^1.10.0",
    "morgan": "^1.10.1",
    "redis": "^5.1.1",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "viem": "^2.33.2",
